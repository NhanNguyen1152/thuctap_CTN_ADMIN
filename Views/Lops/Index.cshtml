@{
    ViewData["Title"] = "Index";
}

<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            LỚP <a asp-action="Create" style="font-size: 80%">- Thêm Lớp</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped b-t b-light">
                <form asp-controller="Sanphams" asp-action="Index" asp-route-ten="SpTen">
                    <p>
                        <input type="text" name="ten">
                        <input type="submit" value="Filter" />
                    </p>
                </form>
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.LTen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LMota)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LKhoa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LNgaybatdau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LNgayketthuc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LTrangthai)
                        </th>
                        <th>Tùy Chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LMota)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LKhoa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LNgaybatdau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LNgayketthuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LTrangthai)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LId" class="btn-color-green "><i
                                    class="fa fa-minus"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.LId" class="btn-color-red "><i
                                    class="fa fa-trash"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <footer class="panel-footer">
            <div class="row">

                <div class="col-sm-5 text-center">
                    <small class="text-muted inline m-t-sm m-b-sm">showing 20-30 of 50 items</small>
                </div>
                <div class="col-sm-7 text-right text-center-xs">
                    <ul class="pagination pagination-sm m-t-none m-b-none">
                        <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
