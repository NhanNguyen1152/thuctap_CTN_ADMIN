@model thuctap_CTN_NEW.Models.Chitietlop

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
        <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                SỬA CHI TIẾT LỚP
            </header>
            <div class="panel-body">
                <form asp-action="Edit" class="form-horizontal bucket-form" method="POST">
                        <input type="hidden" asp-for="CtlId" />
                    <div class="col-md-6 form-group">
                        <label asp-for="CtlId" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="CtlId" class="form-control" readonly = "readonly">
                        </div>
                    </div>                    
                    <div class="col-md-6 form-group">
                        <label asp-for="LId" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                               <select asp-for="LId" class ="form-control" asp-items="ViewBag.LId"></select>
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label asp-for="HvId" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                                <select asp-for="HvId" class ="form-control" asp-items="ViewBag.HvId"></select>
                        </div>
                    </div>

                    <div class="col-sm-4">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <button type="button" class="btn" style="background-color: tomato;"><a href="/Chitietlops/Index" style="color: white;background-color: tomato;">Quay Trở Lại</a> </button>
                    </div>

                </form>
            </div>
        </section>
        </div>
</div>
