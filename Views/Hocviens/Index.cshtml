                                @Html.DisplayFor(modelItem => item.HvEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvNgayvao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvHinhanh)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.HvId" class="btn-color-green "><i
                                    class="fa fa-minus"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.HvId" class="btn-color-red "><i
                                    class="fa fa-trash"></i></a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
