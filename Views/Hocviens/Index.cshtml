                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HvSdt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HvEmail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HvNgayvao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HvHinhanh)
                        </th>

                        <th>Tùy Chọn</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
