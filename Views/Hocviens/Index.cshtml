                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvNgaysinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvGioitinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvDiachi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HvSdt)
                            </td>
